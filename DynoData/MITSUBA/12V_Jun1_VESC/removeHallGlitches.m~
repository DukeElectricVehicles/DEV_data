function [rpm] = removeHallGlitches(rpm)

    for i = 1:length(rpm) - 2%fix glitches in rpm readout
       if (rpm(i) > 0) && (rpm(i+2) > 0) && (rpm(i+1) == 0)
           rpm(i+1) = rpm(i);
       end
    end
    
    time = 1./rpm;
    
    for i = length(time):-1:2
        if (time(i) - time(i-1) < -(time(i)/2))
            time(i-55:i-2) = time(i-55:i-2) * 54/53;
            time(i-1) = time(i-2);
            time (i-56) = time(i-55);
        end
    end
    
    rpm = 1./time;
end